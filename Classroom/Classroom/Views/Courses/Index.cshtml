@model IEnumerable<Classroom.Models.Course>

@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="panel panel-danger">
    <div class="panel-heading">
        New Course
    </div>
    <div class="panel-body">
        @Html.Action("_Create", "Courses")
    </div>
</div>

<div class="panel panel-danger">
    <div class="panel-heading">
        Courses
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-pencil-square-o btn btn-primary btn-sm", title = "Edit" })
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-list btn btn-success btn-sm", title = "Details" })
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash-o btn btn-danger btn-sm", title = "Delete" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
