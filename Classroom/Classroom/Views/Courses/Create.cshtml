@model Classroom.Models.Course
@{
    ViewBag.Title = "Create";
}



<div class="classroom-form">
    <h2>New Course</h2>
    @using (Html.BeginForm("Create", "Courses"))
    {
        @Html.AntiForgeryToken()
        <p class="alert alert-info">All fields are <strong>required</strong>.
        </p>
        <hr/>

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", autofocus = "autofocus"})
            @Html.ValidationMessageFor(m => m.Name, "", new {@class = "text-danger"})
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>


@section Scripts{
    
    @Scripts.Render("~/bundles/jqueryval")
}

