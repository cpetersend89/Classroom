@using Microsoft.AspNet.Identity
@model Classroom.ViewModels.VirtualClassroomViewModel

@{
    ViewBag.Title = "Classroom";
    Layout = "~/Views/Shared/_ClassroomLayout.cshtml";
}

<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="" alt="">
                <div class="intro-text">
                    <span class="skills">Welcome to,</span><br />
                    <span class="name">@Html.DisplayFor(model => model.VirtualClassroom.ClassroomTitle)</span>
                    <hr class="star-light">
                </div>

            </div>
        </div>
    </div>
</header>

<section id="Assignments">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Assignments</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div>
            <div id="assignmentAccordion">
                @foreach (var item in Model.Assignments)
                {
                    <h3>@Html.DisplayFor(modelItem => item.TaskTitle)<span class="pull-right"><i class="fa fa-calendar" aria-hidden="true"></i> Available: @Html.DisplayFor(modelItem => item.AvailableDate) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-calendar" aria-hidden="true"></i> Due: @Html.DisplayFor(modelItem => item.DueDate)</span> </h3>
                    <div>

                        @Html.HiddenFor(modelItem => item.AssignmentId)
                        <fieldset class="form-group">
                            <p>@Html.DisplayFor(modelItem => item.TaskDescription)</p>
                        </fieldset>
                        <fieldset class="form-group">
                            <i class="fa fa-file" aria-hidden="true"></i> Supporting Files:
                            @foreach (var file in item.FileDetails)
                            {
                                <a class="btn btn-default btn-sm" href="/Assignments/Download/?p=@(file.FileId + file.Extension)&d=@file.FileName">@file.FileName</a>
                            }
                            
                        </fieldset>

                        <fieldset>
                            @using (Ajax.BeginForm("CompletedAssignment", new { id = item.AssignmentId }, new AjaxOptions() { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    <hr/>
                                    <h4>Submit Assignment</h4>
                                    <hr/>
                                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                    @Html.HiddenFor(model => item.AssignmentId)
                                    @Html.HiddenFor(model => Model.VirtualClassroom.VirtualClassroomId)

                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <input type="file" name="files" multiple="multiple" id="fu1"/>
                                            <br/>
                                            <input type="submit" value="Submit" class="btn btn-info btn-sm"/>
                                        </div>
                                    </div>


                                </div>
                            }
                            <hr />

                        </fieldset>

                        <fieldset>

                            <i class="fa fa-file" aria-hidden="true"></i> Completed Assignment:

                            @foreach (var files in Model.CompletedAssignments)
                            {
                                foreach (var itemFile in item.CompletedAssignmentsFileDetails)
                                {
                                    foreach (var file in files.CompletedAssignmentsFileDetails)
                                    {
                                        if (itemFile == file)
                                        {

                                            <B>
                                                <a class="btn btn-success btn-sm" href="/Assignments/Download/?p=@(file.FileId + file.Extension)&d=@file.FileName">@file.FileName</a>
                                                <a href="javascript:void(0);" data-id="@file.FileId" class="deleteAssignment"><i class="fa fa-times" style="color: red" aria-hidden="true"></i></a>
                                            </B>
                                        }
                                    }
                                }
                            }
                            <hr/>
                        </fieldset>
                    </div>
                }
            </div>
        </div>
    </div>



</section>

<!-- About Section -->

<section class="success" id="Tests">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Tests</h2>
                <hr class="star-light">
            </div>
        </div>
    <div id="testAccordion">
        @foreach (var item in Model.Tests)
        {
            <h3>@Html.DisplayFor(modelItem => item.TaskTitle)<span class="pull-right"><i class="fa fa-calendar" aria-hidden="true"></i> Available: @Html.DisplayFor(modelItem => item.AvailableDate) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-calendar" aria-hidden="true"></i> Due: @Html.DisplayFor(modelItem => item.DueDate)</span> </h3>
            <div>

                @Html.HiddenFor(modelItem => item.TestId)
                <fieldset class="form-group">
                    <p>@Html.DisplayFor(modelItem => item.TaskDescription)</p>
                </fieldset>
                <fieldset class="form-group">
                    <i class="fa fa-file" aria-hidden="true"></i> Supporting Files:
                    @foreach (var file in item.FileDetails)
                    {
                        <a class="btn btn-default btn-sm" href="/Tests/Download/?p=@(file.FileId + file.Extension)&d=@file.FileName">@file.FileName</a>
                    }

                </fieldset>

                <fieldset>
                    @using (Ajax.BeginForm("CompletedTest", new {id = item.TestId}, new AjaxOptions() {HttpMethod = "POST"}, new {enctype = "multipart/form-data"}))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <hr/>
                            <h4>Submit Test</h4>
                            <hr/>
                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            @Html.HiddenFor(model => item.TestId)
                            @Html.HiddenFor(model => Model.VirtualClassroom.VirtualClassroomId)

                            <div class="form-group">
                                <div class="col-md-6">
                                    <input type="file" name="files" multiple="multiple" id="fu1"/>
                                    <br/>
                                    <input type="submit" value="Submit" class="btn btn-info btn-sm"/>
                                </div>
                            </div>


                        </div>
                    }
                    <hr/>

                </fieldset>

                <fieldset>

                    <i class="fa fa-file" aria-hidden="true"></i> Completed Assignment:

                    @foreach (var files in Model.CompletedTests)
                    {
                        foreach (var itemFile in item.CompletedTestsFileDetails)
                        {
                            foreach (var file in files.CompletedTestsFileDetails)
                            {
                                if (itemFile == file)
                                {

                                    <B>
                                        <a class="btn btn-success btn-sm" href="/Assignments/Download/?p=@(file.FileId + file.Extension)&d=@file.FileName">@file.FileName</a>
                                        <a href="javascript:void(0);" data-id="@file.FileId" class="deleteTest"><i class="fa fa-times" style="color: red" aria-hidden="true"></i></a>
                                    </B>
                                }
                            }
                        }
                    }
                    <hr/>
                </fieldset>
            </div>
        }
    </div>
        </div>





</section>

<section id="Syllabus">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Syllabus</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div>
            @Html.Partial("_syllabus", Model.Syllabus)
        </div>
    </div>


</section>


@section Scripts {

<script>
        $(function () {
            $("#assignmentAccordion").accordion({
                collapsible: true,
                active: 'none'
            });
        });
        $(function () {
            $("#testAccordion").accordion({
                collapsible: true,
                active: 'none'
            });
        });
</script>

    <script>
        $('.deleteAssignment').click(function(e) {
            e.preventDefault();
            var $ctrl = $(this);
            if (confirm('Do you really want to delete this file?')) {
                $.ajax({
                    url: '@Url.Action("DeleteCompletedAssignment", "VirtualClassrooms")',
                    type: 'POST',
                    data: { id: $(this).data('id') }
                }).done(function(data) {
                    if (data.Result == "OK") {
                        $ctrl.closest('B').remove();
                    } else if (data.Result.Message) {
                        alert(data.Result.Message);
                    }
                }).fail(function() {
                    alert("There is something wrong. Please try again.");
                })

            }
        });
    </script>
<script>
    $('.deleteTest').click(function (e) {
        e.preventDefault();
        var $ctrl = $(this);
        if (confirm('Do you really want to delete this file?')) {
            $.ajax({
                url: '@Url.Action("DeleteCompletedTest", "VirtualClassrooms")',
                type: 'POST',
                data: { id: $(this).data('id') }
            }).done(function (data) {
                if (data.Result == "OK") {
                    $ctrl.closest('B').remove();
                }
                else if (data.Result.Message) {
                    alert(data.Result.Message);
                }
            }).fail(function () {
                alert("There is something wrong. Please try again.");
            })

        }
    });
</script>
}




