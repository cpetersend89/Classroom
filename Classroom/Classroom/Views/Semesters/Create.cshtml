@model Classroom.Models.Semester

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="classroom-form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <h2>New Semester</h2>
        <p class="alert alert-info">
            All fields are <strong>required</strong>.
        </p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate)
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", id = "startdatepicker" } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate)
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", id = "enddatepicker" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />

        </div>

    }
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts{
    <script>
        $(function () {
            $("#startdatepicker").datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                changeMonth: true,
                changeYear: true
            });
        });
        $(function () {
            $("#enddatepicker").datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}