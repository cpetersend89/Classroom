@model IEnumerable<Classroom.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @if (item.Instructors.Count() == 0)
                {
                <span>No Instructors</span>
            }
            else
            {
                <span>@item.Instructors.Count() Instructor(s)</span>
            }
        </td>
        <td>
            @if (item.Courses.Count() == 0)
                {
                <span>No Courses</span>
            }
            else
            {
                <span>@item.Courses.Count() Course(s)</span>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartmentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartmentId })
        </td>
    </tr>
}

</table>
